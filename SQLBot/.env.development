# SQLBot Development Environment Variables
# Copy this file to .env and modify as needed

# Database Configuration
POSTGRES_SERVER=db
POSTGRES_PORT=5432
POSTGRES_DB=sqlbot
POSTGRES_USER=root
POSTGRES_PASSWORD=Password123@pg

# Project Settings
PROJECT_NAME=SQLBot
DEFAULT_PWD=SQLBot@123456

# Security (change in production)
SECRET_KEY=dev-secret-key-change-in-production

# CORS Settings
BACKEND_CORS_ORIGINS=http://localhost,http://localhost:5173,http://127.0.0.1:5173

# Logging
LOG_LEVEL=DEBUG
SQL_DEBUG=false

# Embedding (disabled for faster startup in dev)
EMBEDDING_ENABLED=false
TABLE_EMBEDDING_ENABLED=false

# Paths
BASE_DIR=/opt/sqlbot
MCP_IMAGE_PATH=/opt/sqlbot/images
EXCEL_PATH=/opt/sqlbot/data/excel
LOCAL_MODEL_PATH=/opt/sqlbot/models
